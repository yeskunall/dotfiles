// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "commit_message_model": {
      "provider": "google",
      "model": "gemini-pro",
    },
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-opus-4-5-thinking",
    },
    "default_profile": "ask",
    "dock": "left",
    "play_sound_when_agent_done": true,
    "profiles": {
      "ask": {
        "default_model": {
          "provider": "zed.dev",
          "model": "claude-opus-4-5-thinking",
        },
        "name": "Ask",
        "context_servers": {
          "Context7": {
            "tools": {
              "query-docs": true,
              "get-library-docs": true,
              "resolve-library-id": true,
            },
          },
          "Sequential thinking": {
            "tools": {
              "sequentialthinking": true,
            },
          },
        },
        "enable_all_context_servers": false,
        "tools": {
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "thinking": true,
          "web_search": true,
        },
      },
      "minimal": {
        "default_model": {
          "provider": "zed.dev",
          "model": "gpt-5.1",
        },
        "name": "Minimal",
        "tools": {},
        "enable_all_context_servers": false,
      },
      "sequential_thinking": {
        "name": "Sequential thinking",
        "default_model": {
          "provider": "zed.dev",
          "model": "claude-opus-4-5-thinking",
        },
        "enable_all_context_servers": true,
      },
      "write": {
        "default_model": {
          "provider": "zed.dev",
          "model": "claude-opus-4-5-thinking",
        },
        "name": "Write",
        "enable_all_context_servers": true,
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true,
        },
      },
    },
  },
  "audio": {
    "experimental.rodio_audio": true,
  },
  "auto_update": false,
  "buffer_font_size": 14,
  "buffer_font_family": "Liga SFMono Nerd Font",
  "buffer_font_weight": 500.0,
  "calls": {
    "mute_on_join": true,
  },
  "colorize_brackets": true,
  "context_servers": {
    "Context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
    },
    // An MCP server implementation that provides a tool for dynamic and reflective problem-solving through a structured thinking process.
    "Sequential thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
    },
  },
  "cursor_shape": "block",
  "debugger": {
    "format_dap_log_messages": true,
    "log_dap_communications": true,
  },
  "diagnostics": {
    "button": false,
  },
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "subtle",
  },
  "fast_scroll_sensitivity": 10.0,
  "features": {
    "experimental_edit_prediction_context_retrieval": true,
    "edit_prediction_provider": "zed",
  },
  "file_types": {
    "Git Ignore": [".dockerignore", ".prettierignore"],
    "JSON": [".prettierrc"],
  },
  "git_hosting_providers": [],
  "hover_popover_delay": 50,
  "icon_theme": "Catppuccin Frapp√©",
  "indent_guides": {
    "coloring": "indent_aware",
    "active_line_width": 3,
  },
  "languages": {
    "Astro": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
      "language_servers": ["eslint", "..."],
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
      "prettier": {
        "allowed": false,
      },
    },
    "Markdown": {
      "format_on_save": "on",
      "remove_trailing_whitespace_on_save": false,
      "prettier": {
        "allowed": true,
      },
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
      "prettier": {
        "allowed": false,
      },
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
      "prettier": {
        "allowed": false,
      },
    },
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "templ": "html",
        },
        "experimental": {
          "classRegex": ["class=\"([^\"]*)\"", "className=\"([^\"]*)\""],
        },
      },
    },
    "vtsls": {
      "settings": {
        "typescript": {
          "preferences": {
            "importModuleSpecifier": "non-relative",
          },
        },
      },
    },
  },
  "minimap": {
    "display_in": "active_editor",
    "show": "auto",
  },
  "notification_panel": {
    "button": false,
    "dock": "left",
  },
  "outline_panel": {
    "button": false,
  },
  "preview_tabs": {
    "enabled": false,
  },
  "project_panel": {
    "starts_open": false,
    "button": false,
    "default_width": 300,
    "dock": "right",
  },
  "redact_private_values": true,
  "scroll_sensitivity": 1.5,
  "search": {
    "button": false,
  },
  "show_whitespaces": "selection",
  "soft_wrap": "none",
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "terminal": {
    "button": false,
    "working_directory": "current_project_directory",
  },
  "theme": {
    "mode": "light",
    "light": "macOS Classic Light",
    "dark": "GitHub Dark Default",
  },
  "title_bar": {
    "show_branch_name": false,
    "show_project_items": false,
    "show_sign_in": false,
  },
  "toolbar": {
    "quick_actions": false,
  },
  "ui_font_family": ".ZedMono",
  "ui_font_size": 14,
}
