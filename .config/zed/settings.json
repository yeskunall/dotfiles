// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_model": {
      "provider": "ollama",
      "model": "qwen2.5-coder:1.5b"
    },
    "default_profile": "ask",
    "dock": "left",
    "model_parameters": [],
    "play_sound_when_agent_done": true
  },
  "auto_update": false,
  "buffer_font_size": 14,
  "buffer_font_family": "Liga SFMono Nerd Font",
  "collaboration_panel": {
    "button": false
  },
  "cursor_shape": "block",
  "diagnostics": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "hover_popover_delay": 50,
  "icon_theme": "Catppuccin Frapp√©",
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "Templ": {
      "language_servers": [
        "templ",
        "tailwindcss-language-server",
        "emmet-language-server",
        "vscode-html-language-server",
        "..."
      ]
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    }
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434",
      "available_models": [
        {
          "name": "qwen2.5-coder:1.5b",
          "display_name": "Qwen2.5 Coder 1.5B",
          "max_tokens": 32768,
          "supports_tools": true
        },
        {
          "name": "qwen3:4b",
          "display_name": "Qwen3",
          "max_tokens": 32768,
          "supports_thinking": true
        }
      ]
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "templ": "html"
        },
        "experimental": {
          "classRegex": ["class=\"([^\"]*)\"", "className=\"([^\"]*)\""]
        }
      }
    }
  },
  "notification_panel": {
    "button": false,
    "dock": "left"
  },
  "outline_panel": {
    "button": false
  },
  "project_panel": {
    "dock": "right",
    "button": false
  },
  "redact_private_values": true,
  "search": {
    "button": false
  },
  "show_whitespaces": "selection",
  "soft_wrap": "none",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "button": false
  },
  "theme": {
    "mode": "system",
    "light": "macOS Classic Light",
    "dark": "GitHub Dark Default"
  },
  "title_bar": {
    "show_sign_in": false
  },
  "toolbar": {
    "quick_actions": false
  },
  "ui_font_family": ".ZedMono",
  "ui_font_size": 14
}
