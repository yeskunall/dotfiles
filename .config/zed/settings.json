// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5"
    },
    "default_profile": "write",
    "dock": "left",
    "model_parameters": [],
    "play_sound_when_agent_done": true
  },
  "audio": {
    "experimental.rodio_audio": true
  },
  "auto_update": false,
  "base_keymap": "VSCode",
  "buffer_font_size": 14,
  "buffer_font_family": "Liga SFMono Nerd Font",
  "buffer_font_weight": 500,
  "calls": {
    "mute_on_join": true
  },
  "colorize_brackets": true,
  "cursor_shape": "block",
  "debugger": {
    "format_dap_log_messages": true,
    "log_dap_communications": true
  },
  "diagnostics": {
    "button": false
  },
  "edit_predictions": {
    // TODO(yeskunall): fill ‘er up
    "disabled_globs": [],
    "mode": "subtle"
  },
  "fast_scroll_sensitivity": 10.0,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "file_types": {
    "Git Ignore": [".dockerignore", ".prettierignore"],
    "JSON": [".prettierrc"]
  },
  "git_hosting_providers": [],
  "hover_popover_delay": 50,
  "icon_theme": "Catppuccin Frappé",
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "prettier": {
        "allowed": false
      }
    },
    "Templ": {
      "language_servers": [
        "templ",
        "tailwindcss-language-server",
        "emmet-language-server",
        "vscode-html-language-server",
        "..."
      ]
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "prettier": {
        "allowed": false
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "prettier": {
        "allowed": false
      }
    }
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434",
      "available_models": [
        {
          "name": "qwen2.5-coder:0.5b",
          "display_name": "Qwen2.5 Coder 0.5B",
          "max_tokens": 32768,
          "supports_tools": true
        },
        {
          "name": "qwen2.5-coder:1.5b",
          "display_name": "Qwen2.5 Coder 1.5B",
          "max_tokens": 32768,
          "supports_tools": true
        },
        {
          "name": "qwen3:4b",
          "display_name": "Qwen3",
          "max_tokens": 32768,
          "supports_thinking": true
        }
      ]
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "templ": "html"
        },
        "experimental": {
          "classRegex": ["class=\"([^\"]*)\"", "className=\"([^\"]*)\""]
        }
      }
    },
    "vtsls": {
      "settings": {
        "typescript": {
          "preferences": {
            "importModuleSpecifier": "non-relative"
          }
        }
      }
    }
  },
  "minimap": {
    "display_in": "active_editor",
    "show": "auto"
  },
  "notification_panel": {
    "button": false,
    "dock": "left"
  },
  "outline_panel": {
    "button": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "project_panel": {
    "starts_open": false,
    "button": false,
    "default_width": 300,
    "dock": "right"
  },
  "redact_private_values": true,
  "scroll_sensitivity": 1.5,
  "search": {
    "button": false
  },
  "show_whitespaces": "selection",
  "soft_wrap": "none",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "button": false,
    "working_directory": "current_project_directory"
  },
  "theme": {
    "mode": "light",
    "light": "macOS Classic Light",
    "dark": "GitHub Dark Default"
  },
  "title_bar": {
    "show_branch_name": false,
    "show_project_items": false,
    "show_sign_in": false
  },
  "toolbar": {
    "quick_actions": true
  },
  "ui_font_family": ".ZedMono",
  "ui_font_size": 14
}
