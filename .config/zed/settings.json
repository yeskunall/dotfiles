// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "dock": "left",
    "enabled": false,
    "model_parameters": []
  },
  "auto_update": false,
  "buffer_font_size": 14,
  "buffer_font_family": "Liga SFMono Nerd Font",
  "chat_panel": {
    "button": "never"
  },
  "collaboration_panel": {
    "button": false
  },
  "cursor_shape": "block",
  "diagnostics": {
    "button": false
  },
  "disable_ai": true,
  "git_panel": {
    "button": false
  },
  "hover_popover_delay": 150,
  "icon_theme": "Catppuccin Frapp√©",
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "Templ": {
      "language_servers": [
        "templ",
        "tailwindcss-language-server",
        "emmet-language-server",
        "vscode-html-language-server",
        "..."
      ]
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "templ": "html"
        },
        "experimental": {
          "classRegex": ["class=\"([^\"]*)\"", "className=\"([^\"]*)\""]
        }
      }
    }
  },
  "notification_panel": {
    "button": false,
    "dock": "left"
  },
  "outline_panel": {
    "button": false
  },
  "project_panel": {
    "dock": "right",
    "button": false
  },
  "redact_private_values": true,
  "search": {
    "button": false
  },
  "show_whitespaces": "selection",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "button": false
  },
  "theme": {
    "mode": "system",
    "light": "macOS Classic Light",
    "dark": "GitHub Dark Default"
  },
  "title_bar": {
    "show_sign_in": false
  },
  "toolbar": {
    "quick_actions": false
  },
  "ui_font_family": "Zed Plex Mono",
  "ui_font_size": 14
}
