{
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "block",
  "editor.fontFamily": "CaskaydiaCove Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.letterSpacing": 0.3,
  "editor.lineHeight": 24,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80,
    100,
    120
  ],
  "editor.smoothScrolling": true,
  "explorer.sortOrder": "default",
  // I update using Homebrew instead
  // See https://github.com/VSCodium/vscodium/blob/master/DOCS.md#replacements-to-microsoft-online-services for more
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "files.associations": {
    ".env": "ini"
  },
  "git.autofetch": false,
  "git.enableCommitSigning": true,
  "git.enableStatusBarSync": false,
  "json.schemaDownload.enable": true,
  "npm.fetchOnlinePackageInfo": false,
  "telemetry.telemetryLevel": "off",
  "update.mode": "manual",
  "update.showReleaseNotes": false,
  // This is the only way to increase the font size of the file explorer
  "window.zoomLevel": 1,
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "One Hunter Theme Vercel",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.enableExperiments": false,
  "workbench.experimental.cloudChanges.autoStore": "off",
  "workbench.iconTheme": "symbols",
  "workbench.layoutControl.enabled": false,
  // Disable local history (applicable starting v1.66 and up)
  // See https://code.visualstudio.com/updates/v1_66#_local-history for more
  "workbench.localHistory.enabled": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,
  "workbench.tree.indent": 20
}
