[alias]
  mergetool = "!nvim -c DiffviewOpen"
[color]
  branch = true
  # Default is `auto`
  ui = true
[commit]
  gpgsign = true
[core]
  # Use global `.gitattributes` and `.gitignore`
  attributesfile = "~/.config/git/.gitattributes_global"
  autocrlf = false
  editor = nvim
  excludesfile = "~/.config/git/.gitignore_global"
  pager = "delta"
  # https://git-scm.com/docs/git-update-index#_untracked_cache
  untrackedCache = true
[delta]
  line-numbers = true
  navigate = true
  side-by-side = true
[gpg]
  format = ssh
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
  allowedSignersFile = "/Users/admin/.ssh/allowed_signers"
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only
