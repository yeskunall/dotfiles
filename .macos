# Set default document format for TextEdit to plain text (.txt)
defaults write com.apple.TextEdit "RichText" -bool "false"

# Finally, kill TextEdit
killall TextEdit

# Turn off font smoothing
defaults write "AppleFontSmoothing" -int 0

